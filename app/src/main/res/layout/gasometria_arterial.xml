<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="gasometriaArterialOnClick"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="0dp"
                android:layout_marginEnd="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GasometriaArterial"
                style="@style/TitleTextStyleForLayoutSelection"/>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:clickable="true"
                android:id="@+id/gasometriaArterialSwitch"
                android:onClick="gasometriaArterialSwitchOnClick"
                android:theme="@style/MySwitch"/>
        </LinearLayout>
        <TextView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Normal"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="0dp"
            style="@style/ItemSelectedTextStyleForLayoutSelection"
            android:id="@+id/gasometriaArterialTextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/gasometriaArterialItens"
        android:visibility="gone">
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:onClick="metabolicoOnClick"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Metabolico"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                style="@style/TitleTextStyleForLayoutSelection"
                />
            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                style="@style/ItemSelectedTextStyleForLayoutSelection"
                android:id="@+id/metabolicoGasometriaTextView"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:onClick="respiratorioOnClick"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Respiratorio"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                style="@style/TitleTextStyleForLayoutSelection"
                />
            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                style="@style/ItemSelectedTextStyleForLayoutSelection"
                android:id="@+id/respiratorioGasometriaTextView"/>
        </LinearLayout>


    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray">
    </LinearLayout>
</LinearLayout>