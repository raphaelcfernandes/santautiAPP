<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:onClick="avaliacaoPupilarOnClick">
        <TextView
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AvaliacaoPupilar"
            style="@style/TitleTextStyleForLayoutSelection"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="0dp"
            style="@style/ItemSelectedTextStyleForLayoutSelection"
            android:id="@+id/avaliacaoPupilar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/avaliacaoPupilarItens"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:onClick="tamanhoPupilaOnClick"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/menuTamanhoPupila"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="60dp"
                android:text="@string/TamanhoPupila"
                android:layout_marginStart="@dimen/submenu_left_padding"
                style="@style/TitleTextStyleForLayoutSelection"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                style="@style/ItemSelectedTextStyleForLayoutSelection"
                android:id="@+id/tamanhoPupilaTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="simetriaPupilaOnClick"
            >
            <TextView
                android:id="@+id/menuSimetriaPupila"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="60dp"
                android:text="@string/SimetriaPupila"
                android:layout_marginStart="@dimen/submenu_left_padding"
                style="@style/TitleTextStyleForLayoutSelection"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                style="@style/ItemSelectedTextStyleForLayoutSelection"
                android:id="@+id/simetriaPupilaTextView"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/diferencaPupilaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="?attr/selectableItemBackground"
            android:onClick="diferencaPupilaOnClick"
            android:paddingTop="10dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/menuDiferencaPupilas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="60dp"
                android:text="@string/DiferencaPupilar"
                android:layout_marginStart="@dimen/submenu_left_padding"
                style="@style/TitleTextStyleForLayoutSelection"
                />
            <TextView
                android:id="@+id/diferencaPupilaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                style="@style/ItemSelectedTextStyleForLayoutSelection" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="?attr/selectableItemBackground"
            android:onClick="reatividadeLuzOnClick">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/submenu_right_padding">
                <TextView
                    android:id="@+id/menuReatividadeLuz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="60dp"
                    android:text="@string/ReatividadeALuzPupila"
                    android:layout_marginStart="@dimen/submenu_left_padding"
                    style="@style/TitleTextStyleForLayoutSelection"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/submenu_left_padding"
                android:paddingEnd="@dimen/submenu_right_padding"
                android:visibility="visible"
                android:id="@+id/reatividadeLuzTextView"
                style="@style/ItemSelectedTextStyleForLayoutSelection"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray">
    </LinearLayout>


</LinearLayout>
