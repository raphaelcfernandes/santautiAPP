<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="50dp"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/drogasVasoativas_recyclerView_layout"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/deleteIcon_neurologico_recycler_view"
            android:layout_width="20dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp" />
        <ImageView
            android:id="@+id/editIcon_neurologico_recycler_view"
            android:layout_width="20dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Sedativo:" />

                <TextView
                    android:id="@+id/tipoSedativo_neurologico_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/primary_text_light" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Dose:" />

                <TextView
                    android:id="@+id/doseSedativo_neurologico_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>