<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:id="@+id/gastrointestinal_layout"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:paddingStart="16dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical">
        <!--Scrollable content here-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TableRow>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formato abdome: "
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/formato_abdome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:dropDownVerticalOffset="60dp"/>
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/gray">
            </LinearLayout>

            <TableRow>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tensão: "
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/gastrointestinal_tensao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/gray">
            </LinearLayout>

            <TableRow android:layout_marginTop="10dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruídos Hidroaereos: "
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/intensidade_ruido_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:dropDownVerticalOffset="60dp"/>
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="@color/gray">
            </LinearLayout>

            <TableRow
                android:paddingTop="10dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Massas Palpaveis: "
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <android.support.v7.widget.SwitchCompat
                    android:layout_width="match_parent"
                    android:switchMinWidth="56dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:theme="@style/MySwitch"
                    android:paddingEnd="150dp"/>
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="@color/gray">
            </LinearLayout>

            <TableRow android:paddingTop="10dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visceras Palpaveis: "
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <android.support.v7.widget.SwitchCompat
                    android:layout_width="match_parent"
                    android:switchMinWidth="56dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:theme="@style/MySwitch"
                    android:paddingEnd="150dp"/>
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray">
            </LinearLayout>

        </TableLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <include layout="@layout/bottom_buttons_navigate_fichas"/>
    </RelativeLayout>



</LinearLayout>
